<Window x:Class="BeatLibrary.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="BeatLibrary" Height="500" Width="500">
    <Grid >
        <Button Content="Save" HorizontalAlignment="Right" Height="29" Margin="0,0,60,10" VerticalAlignment="Bottom" Width="46" RenderTransformOrigin="0.22,-0.182" Click="SaveButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Height="29" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="45" RenderTransformOrigin="0.22,-0.182" Click="CancelButton_Click"/>
        <TextBox Name="GamePathBox" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" TextWrapping="NoWrap" Text="GamePath" VerticalAlignment="Top" Width="269"/>
    </Grid>
</Window>